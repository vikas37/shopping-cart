<%- include("../partials/header") %> <%- include("../partials/navbar") %>

<link rel="stylesheet" href="/css/star.css" />

<div class="container mt-5">
  <%- include("../partials/flash") %>
  <div class="row">
    <div class="col-lg-6">
      <div class="card" style="width: 25rem">
        <img src="<%= product.img %> " class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <h5 class="card-title">&#8377; <%= product.price %></h5>
          <p class="card-text"><%= product.desc %></p>
          <a href="#" class="btn btn-success" style="margin: 3px">Buy</a>
          <a
            href="/products/<%= product._id %>/edit "
            class="btn btn-warning"
            style="margin: 4px"
            >Edit</a
          >

          <div class="mb-3 mt-3">
            <form action="/user/<%=product._id%>/cart" method="POST">
              <button class="btn btn-secondary">Add To Cart</button>
            </form>
          </div>

          <div class="mt-3">
            <form
              action="/products/<%=product._id%>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <h6 class="display-6">Leave a review</h6>
      <form
        action="/products/<%= product._id %>/review "
        method="POST"
        style="max-width: 70%"
        novalidate
        class="validated-form"
      >
        <!-- <div class="mb-3"> -->
        <!-- <label for="rating" class="form-label">Rating: </label>
          <input
            type="range"
            name="rating"
            class="form-rating"
            min="0"
            max="5"
            required
            id="rating"
          />
          <div class="invalid-feedback">Please provide a valid rating</div>
        </div> -->

        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="1"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <div class="mb-3">
          <label for="desc" class="form-label">Comment: </label>
          <textarea
            class="form-control"
            id="desc"
            cols="50"
            rows="3"
            name="comment"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a comment.</div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <div class="mb-3 mt-3">
        <% for(let review of product.reviews){ %>
        <div class="card mb-3">
          <div class="carb-body" style="margin: 3px 0 0 3px">
            <!-- <h5 class="card-title">Rating : <%= review.rating %></h5> -->
            <p class="starability-result" data-rating="<%=review.rating%>">
              Rated: <%=review.rating%> stars
            </p>
            <p style="color: grey">by : <%= review.user %></p>
            <p class="card-text">Review : <%= review.comment %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
